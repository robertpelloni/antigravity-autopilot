{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Recompile VSIX",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"package"
			],
			"isBackground": false
		},
		{
			"label": "Lint Root",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"lint"
			],
			"isBackground": false
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}